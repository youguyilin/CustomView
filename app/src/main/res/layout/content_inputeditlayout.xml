<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kevn = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kevn:counterOverflowTextAppearance="@style/counterOverFlowTextColor"
        >
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:singleLine="true"
            android:textColor="@android:color/black"
            />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kevn:hintEnabled="false"
        kevn:hintAnimationEnabled="true"
        >
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:singleLine="true"
            android:textColor="@android:color/holo_blue_bright"
            />

    </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kevn:passwordToggleTint="@color/colorAccent"
        kevn:passwordToggleTintMode="src_atop"
        kevn:passwordToggleEnabled="true"
        kevn:passwordToggleDrawable="@drawable/eye"
        kevn:passwordToggleContentDescription="TEXTdemo"
     kevn:errorTextAppearance="@style/counterOverFlowTextColor"
        >
        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_blue_bright"
            />

    </android.support.design.widget.TextInputLayout>






</LinearLayout>